@page "/bookings"
@inject HttpClient Http

<h3>Tee Time Bookings</h3>

@if (bookings == null)
{
    <p>Loading bookings...</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Time</th>
            <th>Players</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var booking in bookings)
        {
            <tr>
                <td>@booking.BookingTime.ToString("hh:mm tt")</td>
                <td>@string.Join(", ", booking.Players)</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<TeeTimeBookingViewModel> bookings;

    protected override async Task OnInitializedAsync()
    {
        bookings = await Http.GetFromJsonAsync<List<TeeTimeBookingViewModel>>("http://localhost:5080/api/bookings");
    }

    private class TeeTimeBookingViewModel
    {
        public DateTime BookingTime { get; set; }
        public List<string> Players { get; set; } = new();
    }
}